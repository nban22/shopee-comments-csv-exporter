<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Shopee Comments Crawler</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <style>
            body {
                background-color: #f1f5f9;
                margin: 0;
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }
            header {
                background-color: #ff4500;
                color: white;
                padding: 20px;
                text-align: center;
            }
            footer {
                background-color: #222;
                color: #aaa;
                padding: 20px 0;
                text-align: center;
                margin-top: auto;
            }
            footer a {
                color: #ff4500;
                text-decoration: none;
            }
            footer a:hover {
                text-decoration: underline;
            }
            .container {
                max-width: 600px;
                margin: 40px auto;
                background: white;
                border-radius: 10px;
                padding: 30px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }
            .btn-custom {
                background-color: #ff4500;
                color: white;
            }
            .btn-custom:hover {
                background-color: #e03e00;
            }
        </style>
    </head>
    <body>
        <%- include('header') %>

        <!-- Main Container -->
        <div class="container">
            <h2 class="text-center mb-4">Crawl Shopee Comments</h2>
            <form id="crawlForm">
                <div class="mb-3">
                    <input
                        type="text"
                        id="shopeeUrl"
                        class="form-control"
                        placeholder="Enter Shopee product URL"
                        required
                    />
                </div>
                <button type="submit" class="btn btn-custom w-100">üï∑Ô∏è Crawl</button>
            </form>

            <!-- Download Button (hidden by default) -->
            <div class="mt-4" id="response" style="display: none">
                <a id="downloadLink" class="btn btn-success w-100">üì• T·∫£i File CSV</a>
            </div>
        </div>

        <%- include('footer') %>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            const form = document.getElementById("crawlForm");
            const responseBox = document.getElementById("response");
            const downloadLink = document.getElementById("downloadLink");

            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const url = document.getElementById("shopeeUrl").value;

                // G·ª≠i request ƒë·∫øn server backend
                try {
                    const response = await fetch("/api/v1/crawl", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ url }),
                    });

                    const data = await response.json();

                    if (data.status === "success") {
                        downloadLink.href = data.data.fileUrl; // G·∫Øn link file CSV v√†o n√∫t t·∫£i v·ªÅ
                        responseBox.style.display = "block"; // Hi·ªÉn th·ªã n√∫t t·∫£i file CSV
                    } else {
                        alert("L·ªói: " + data.message);
                    }
                } catch (error) {
                    alert("ƒê√£ x·∫£y ra l·ªói! Vui l√≤ng th·ª≠ l·∫°i.");
                }
            });
        </script>
    </body>
</html>
