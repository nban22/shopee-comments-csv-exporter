<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Shopee Comments Crawler</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <style>
            body {
                background-color: #f1f5f9;
                margin: 0;
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }
            header {
                background-color: #ff4500;
                color: white;
                padding: 20px;
                text-align: center;
            }
            footer {
                background-color: #222;
                color: #aaa;
                padding: 20px 0;
                text-align: center;
                margin-top: auto;
            }
            footer a {
                color: #ff4500;
                text-decoration: none;
            }
            footer a:hover {
                text-decoration: underline;
            }
            .container {
                max-width: 600px;
                margin: 40px auto;
                background: white;
                border-radius: 10px;
                padding: 30px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }
            .btn-custom {
                background-color: #ff4500;
                color: white;
            }
            .btn-custom:hover {
                background-color: #e03e00;
            }
            .loading-spinner {
                display: inline-block;
                width: 25px;
                height: 25px;
                border: 6px solid #f3f3f3;
                border-top: 6px solid #3498db;
                border-radius: 50%;
                animation: spin 2s linear infinite;
            }
            #crawlButton {
                display: flex;
                justify-content: center;
                align-items: center;
            }

            @keyframes spin {
                0% {
                    transform: rotate(0deg);
                }
                100% {
                    transform: rotate(360deg);
                }
            }
        </style>
    </head>
    <body>
        <%- include('header') %>

        <!-- Main Container -->
        <div class="container">
            <h2 class="text-center mb-4">Crawl Shopee Comments</h2>
            <form id="crawlForm">
                <div class="mb-3">
                    <input
                        type="text"
                        id="shopeeUrl"
                        class="form-control"
                        placeholder="Enter Shopee product URL"
                        required
                    />
                </div>
                <button type="submit" class="btn btn-custom w-100" id="crawlButton">
                    üï∑Ô∏è Crawl
                </button>
            </form>

            <!-- Download Button (hidden by default) -->
            <div class="mt-4" id="response" style="display: none">
                <a id="downloadLink" class="btn btn-success w-100">üì• Download CSV File</a>
            </div>
            <div id="note-response" class="mt-3" style="display: none">
                <small class="text-muted mt-3" id="note-text">
                    Note: After crawled successfully, your file will be available for download for
                    60 seconds.
                </small>
            </div>
        </div>

        <%- include('footer') %>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            const form = document.getElementById("crawlForm");
            const responseBox = document.getElementById("response");
            const downloadLink = document.getElementById("downloadLink");
            const noteResponse = document.getElementById("note-response");
            const crawlButton = document.getElementById("crawlButton");
            const noteText = document.getElementById("note-text");

            let timer = 60;
            let interval = null;

            form.addEventListener("submit", async (e) => {
                e.preventDefault();

                crawlButton.innerHTML = `<span class="loading-spinner"></span>`;

                const url = document.getElementById("shopeeUrl").value;

                try {
                    const response = await fetch("/api/v1/crawl", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ url }),
                    });

                    const data = await response.json();

                    crawlButton.innerHTML = "üï∑Ô∏è Crawl";

                    if (data.status === "success") {
                        downloadLink.href = data.data.fileUrl;
                        responseBox.style.display = "block";
                        noteResponse.style.display = "block";
                        downloadLink.style.display = "block";
                        clearInterval(interval);
                        timer = 60;
                        interval = setInterval(() => {
                            if (timer === 0) {
                                clearInterval(interval);
                            }
                            noteText.innerHTML = `Note: After crawled successfully, your file will be available for download for ${timer} seconds.`;
                            timer--;
                        }, 1000)
                        alert(data.message);
                    } else {
                        responseBox.style.display = "none";
                        noteResponse.style.display = "none";
                        clearInterval(interval);
                        alert("Error: " + data.message);
                    }
                } catch (error) {
                    alert("There was an error: " + error?.message ? error.message : error);
                }
            });
            downloadLink.addEventListener("click", (e) => {
                e.preventDefault();
                const url = downloadLink.href;

                fetch(url)
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error("Network response was not ok");
                        }

                        // Extract the filename from the Content-Disposition header
                        const contentDisposition = response.headers.get("Content-Disposition");
                        let fileName = "downloaded-file"; // Default filename

                        if (contentDisposition && contentDisposition.includes("filename=")) {
                            fileName = contentDisposition
                                .split("filename=")[1]
                                .replace(/["']/g, ""); // Remove quotes if present
                        }

                        return response.blob().then((blob) => ({ blob, fileName }));
                    })
                    .then(({ blob, fileName }) => {
                        const url = window.URL.createObjectURL(blob);
                        const a = document.createElement("a");
                        a.href = url;
                        a.download = fileName; // Use the extracted filename
                        document.body.appendChild(a);
                        a.click();
                        window.URL.revokeObjectURL(url);
                        clearInterval(interval);
                        noteText.innerHTML = `Note: Your file has been downloaded successfully.`;
                        downloadLink.style.display = "none";
                    })
                    .catch((error) => {
                        // Show an alert if there's an error
                        alert("Failed to download the file. Please try again later.");
                        console.error("Download error:", error);
                    });
            });
        </script>
    </body>
</html>
